<div class="container">
  <div class="row">
    <div class="col" data-controller="insert_in_list">
      <p style="color: green"><%= notice %></p>

      <h1>Monuments</h1>

      <div id="monuments" data-insert_in_list-target="items">
        <% @monuments.each do |monument| %>
          <%= render monument %>
          <p>
            <%= link_to "Show this monument", monument %>
          </p>
        <% end %>
      </div>

      <%= link_to "New monument", new_monument_path %>

      <div data-controller="toggle" class="mt-5">
        <button class="btn btn-outline-primary" data-action="click->toggle#fire">Add a new monument</button>
        <div data-toggle-target="togglableElement" class="d-none">
          <%= render "form", monument: @monument %>
        </div>
      </div>
    </div>
  </div>
</div>
