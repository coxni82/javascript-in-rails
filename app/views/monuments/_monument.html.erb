<div id="<%= dom_id monument %>">
  <p>
    <strong>Name:</strong>
    <%= monument.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <span data-controller="typed"
    data-typed-sentences-value="<%= [monument.address].to_json %>" ></span>
  </p>

  <p>
    <strong>Opening date:</strong>
    <%= monument.opening_date %>
  </p>

</div>
